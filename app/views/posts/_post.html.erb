<br />
<div class="row-fluid ">
  <div class="offset1 span10 timestamp full-border">
        <%= timeago_tag post.created_at, :nojs => true, :force => true %>
  </div>
</div>
<div class="row-fluid">
  <div class="offset1 span10 full-border">
    <div class="span1 right-border">
      <% if post.user.admin? %>
        <div class="admin"><%= post.user_username %></div>
      <% else %>
        <div><%= post.user_username %></div>
      <% end %>

      <p>
        Joined: <br /><%= timeago_tag post.user_created_at, :nojs => true, :force => true %>
      </p>
    </div>
    <div class="span9">
      <% if can? :destroy, post %>
        <%= link_to 'Delete Post', [post.topic, post],
                 :confirm => 'Are you sure?',
                 :method => :delete,
                 :class => 'btn btn-small btn-danger float-right margin-top' %>
       <% end %>
      <p class="content">
        <%= post.body %>
      </p>
    </div>
  </div>
</div>