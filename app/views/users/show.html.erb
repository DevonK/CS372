<div class="row-fluid">
  <div class="offset1 span12">
    <h3>
      <% if @user.admin? %>
        <div class="admin"><%= @user.username %></div>
      <% else %>
        <div class="user"><%= @user.username %></div>
      <% end %>
    </h3>
  </div>
</div>
<div class="row-fluid">
  <div class="offset1 span10 ">
    <div class="span8">
      <p class="content">
        Member since: <%= timeago_tag @user.created_at, :nojs => true, :force => true %>
      </p>
    </div>
  </div>
</div>