<div class="row-fluid">
  <div class="offset1 span12">
    <h3>
      <%= @topic.title %>
    </h3>
  </div>
</div>
<div class="row-fluid ">
  <div class="offset1 span10 timestamp full-border">
        <%= timeago_tag @topic.created_at, :nojs => true, :force => true %>
  </div>
</div>
<div class="row-fluid">
  <div class="offset1 span10 full-border">
    <div class="span2 right-border">
      <% if @topic.user.admin? %>
        <div class="admin"><%= link_to @topic.user_username, user_path(@topic.user_id) %></div>
      <% else %>
        <div class="user"><%= link_to @topic.user_username, user_path(@topic.user_id) %></div>
      <% end %>
      <p>
        Joined: <br /><%= timeago_tag @topic.user_created_at, :nojs => true, :force => true %>
      </p>
    </div>
    <div class="span8">
      <% if can? :manage, @topic %>
        <p class="float-right margin-top">
          <%= link_to 'Edit Topic', edit_topic_path(@topic), :class => 'btn btn-small btn-info' %>
          <br />
          <%= link_to 'Delete Topic', [@topic], :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-small btn-danger' %>
        </p>
      <% end %>
      <p class="content">
        <%= @topic.content %>
      </p>
      <p>
        <b>Tags:</b>
        <%= join_tags(@topic) %>
      </p>
    </div>
  </div>
</div>

<%= render @topic.posts %>

<br />
<div class="row-fluid">
  <div class="offset1 span10 offset1">
    <%= render "posts/form" %>
    <%= link_to 'Back to Topics', topics_path, :class => "btn" %>
  </div>
</div>