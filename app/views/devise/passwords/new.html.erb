<%= devise_error_messages! %>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, :html => { :method => :put }, :html => { :class => "form-signin"}) do |f| %>
  
  <h2>Forgot your password?</h2>
  <div><%= f.email_field :email, :autofocus => true, :class => "input-block-level", :placeholder => "Email address" %></div>

  <div><%= f.submit "Send new password", :class => "btn btn-large btn-primary" %></div>
<% end %>


