<%= devise_error_messages! %>
<p id="notice"><%= notice %></p>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Please sign up</h2>

  <div><%= f.text_field :username, :autofocus => true, :class => "input-block-level", :placeholder => "Username" %></div>
  <div><%= f.email_field :email, :autofocus => true, :class => "input-block-level", :placeholder => "Email address" %></div>
  <div><%= f.password_field :password, :class => "input-block-level", :placeholder => "Password" %></div>
  <div><%= f.password_field :password_confirmation, :class => "input-block-level", :placeholder => "Password Confirmation" %></div>

  <div><%= f.submit "Sign up", :class => "btn btn-large btn-success" %></div>
<% end %>