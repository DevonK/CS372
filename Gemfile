source 'https://rubygems.org'
gem 'rails', '3.2.11'

# Databases
gem 'mysql2'
group :development, :test do
  gem 'sqlite3'
end

# Styles
gem 'bootstrap-sass'       
gem 'bootswatch-rails'
gem 'simple_form'
gem 'jquery-rails'

# Authentication
gem 'devise'

# Gems used only for assets and not required in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

